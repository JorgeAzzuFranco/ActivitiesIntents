<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jorgeazzufranco.activitiesintents.MainActivity">

    <TextView
        android:id="@+id/textoPrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primera pantalla"
        android:textSize="24dp"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a la segunda pantalla"
        android:layout_below="@+id/textoPrim"
        android:layout_centerHorizontal="true"
        android:onClick="segundaPantalla" />

</RelativeLayout>
